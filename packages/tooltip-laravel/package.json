{
  "name": "@affino/tooltip-laravel",
  "version": "0.0.1",
  "description": "Livewire tooltip helper wired to @affino/tooltip-core",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup resources/js/index.ts --format esm,cjs --dts --clean",
    "test": "vitest run"
  },
  "dependencies": {
    "@affino/overlay-kernel": "workspace:*",
    "@affino/tooltip-core": "workspace:*"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.15",
    "tsup": "^8.0.1",
    "vitest": "^4.0.15"
  }
}
