{
  "name": "@affino/combobox-core",
  "version": "0.1.0",
  "author": "Anton Pavlov <a.pavlov@affino.dev>",
  "type": "module",
  "description": "Headless combobox core for Affino UI primitives",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "pnpm run clean && tsc -p tsconfig.json",
