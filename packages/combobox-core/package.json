  "dependencies": {
    "@affino/listbox-core": "workspace:^",
    "@affino/selection-core": "workspace:^"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.15",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/affinio/affinio.git",
    "directory": "packages/combobox-core"
  },
  "homepage": "https://github.com/affinio/affinio/tree/main/packages/combobox-core#readme",
  "license": "MIT",
  "keywords": [
    "combobox",
    "headless",
    "listbox",
    "accessibility"
  ],
  "bugs": {
    "url": "https://github.com/affinio/affinio/issues"
  },
  "module": "dist/index.js"
}
