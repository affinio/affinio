{
  "extends": "../../tsconfig.core.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": false,
    "paths": {
      "@affino/projection-engine": [
        "../projection-engine/dist/index.d.ts"
      ],
      "@affino/projection-engine/*": [
        "../projection-engine/dist/*"
      ],
      "@affino/datagrid-plugins": [
        "../datagrid-plugins/dist/index.d.ts"
      ],
      "@affino/datagrid-plugins/*": [
        "../datagrid-plugins/dist/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/**",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
