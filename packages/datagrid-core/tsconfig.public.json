{
  "extends": "../../tsconfig.core.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": false
  },
  "include": [
    "src/**/*.ts",
    "plugins/**/*.ts",
    "theme/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/**",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
