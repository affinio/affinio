{
  "extends": "../../tsconfig.core.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": false,
    "paths": {
      "@affino/datagrid-plugins": ["../datagrid-plugins/dist/index.d.ts"],
      "@affino/datagrid-plugins/*": ["../datagrid-plugins/dist/*"],
      "@affino/datagrid-theme": ["../datagrid-theme/dist/index.d.ts"],
      "@affino/datagrid-theme/*": ["../datagrid-theme/dist/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/**",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
