{
  "name": "@affino/datagrid-core",
  "version": "0.2.1",
  "author": "Anton Pavlov <a.pavlov@affino.dev>",
  "type": "module",
  "description": "Headless data grid core for Affino UI primitives",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    },
    "./advanced": {
      "types": "./dist/src/advanced.d.ts",
      "import": "./dist/src/advanced.js"
    },
    "./internal": {
      "types": "./dist/src/internal.d.ts",
      "import": "./dist/src/internal.js"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts"
    }
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.public.json && node ./scripts/fix-esm-specifiers.mjs",
    "type-check": "pnpm --filter @affino/datagrid-plugins run build && pnpm --filter @affino/projection-engine run build && tsc -p tsconfig.public.json --noEmit",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:contracts": "vitest run --config vitest.config.ts --testNamePattern=\"contract|lifecycle\"",
    "test:regressions": "vitest run --config vitest.config.ts --testNamePattern=\"determinism|stress\"",
    "test:strict-contracts": "vitest run --config vitest.config.ts --testNamePattern=\"contract|lifecycle|property|stress|determinism\"",
    "test:integration": "vitest run --config vitest.config.ts --testNamePattern=\"contract|integration|property|stress\"",
    "test:coverage": "vitest run --config vitest.config.ts --coverage",
    "test": "pnpm run type-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/affinio/affinio.git",
    "directory": "packages/datagrid-core"
  },
  "homepage": "https://github.com/affinio/affinio/tree/main/packages/datagrid-core#readme",
  "license": "MIT",
  "keywords": [
    "datagrid",
    "grid",
    "table",
    "engine",
    "headless",
    "core"
  ],
  "dependencies": {
    "@affino/projection-engine": "workspace:*",
    "@affino/datagrid-plugins": "workspace:*"
  },
  "peerDependencies": {},
  "devDependencies": {},
  "bugs": {
    "url": "https://github.com/affinio/affinio/issues"
  },
  "module": "dist/src/index.js"
}
