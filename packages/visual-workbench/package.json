{
  "name": "@affino/visual-workbench",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "storybook build",
    "serve:storybook": "http-server storybook-static --port 6006 --silent",
    "test:visual:runner": "wait-on tcp:6006 && test-storybook",
    "test:visual": "storybook build --quiet && concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"pnpm run serve:storybook\" \"pnpm run test:visual:runner\""
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.15",
    "@storybook/addon-interactions": "^8.6.15",
    "@storybook/test": "^8.6.15",
    "@storybook/test-runner": "^0.19.1",
    "@storybook/vue3": "^8.6.15",
    "@storybook/vue3-webpack5": "^8.6.15",
    "concurrently": "^8.2.2",
    "http-server": "^14.1.1",
    "storybook": "^8.6.15",
    "vue": "^3.5.25",
    "wait-on": "^7.2.0"
  }
}
