{
  "extends": "./tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "stripInternal": true,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@affino/menu-core": ["../menu-core/dist/index"],
      "@affino/menu-core/*": ["../menu-core/dist/*"],
      "@affino/surface-core": ["../surface-core/dist/index"],
      "@affino/surface-core/*": ["../surface-core/dist/*"]
    }
  }
}
