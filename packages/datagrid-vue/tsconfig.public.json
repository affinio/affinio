    "src/composables/useDataGridDragPointerSelection.ts",
    "src/composables/useDataGridFillSelectionLifecycle.ts",
    "src/composables/useDataGridRangeMoveLifecycle.ts",
    "src/composables/useDataGridRangeMoveStart.ts",
    "src/composables/useDataGridTabTargetResolver.ts",
    "src/composables/useDataGridCellNavigation.ts",
    "src/composables/useDataGridContextMenu.ts",
    "src/composables/useDataGridContextMenuAnchor.ts",
    "src/composables/useDataGridContextMenuActionRouter.ts",
