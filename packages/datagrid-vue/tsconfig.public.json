{
  "extends": "../../tsconfig.adapter.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "moduleResolution": "bundler",
    "types": ["node"],
    "baseUrl": ".",
