    "src/composables/useDataGridViewportBlurHandler.ts",
    "src/composables/useDataGridGlobalPointerLifecycle.ts",
    "src/composables/useDataGridPointerAutoScroll.ts",
    "src/composables/useDataGridPointerPreviewRouter.ts",
    "src/composables/useDataGridPointerCellCoordResolver.ts",
    "src/composables/useDataGridAxisAutoScrollDelta.ts",
    "src/composables/useDataGridCellVisibilityScroller.ts",
    "src/composables/useDataGridGlobalMouseDownContextMenuCloser.ts",
    "src/composables/useDataGridHeaderSortOrchestration.ts",
