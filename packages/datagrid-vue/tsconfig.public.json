      "@affino/datagrid-core": ["../datagrid-core/dist/src/index.d.ts"],
      "@affino/datagrid-core/*": ["../datagrid-core/dist/src/*"]
    }
  },
  "include": [
    "src/index.ts",
    "src/stable.ts",
    "src/advanced.ts",
    "src/public.ts",
    "src/piniaTableSettingsAdapter.ts",
    "src/tableSettingsStore.ts",
    "src/runtime/**/*.ts",
    "src/components/**/*.ts",
    "src/types/**/*.ts",
    "src/types/**/*.d.ts",
    "src/adapters/a11yAttributesAdapter.ts",
    "src/composables/useDataGridClipboardBridge.ts",
    "src/composables/useDataGridClipboardMutations.ts",
    "src/composables/useDataGridCellPointerDownRouter.ts",
    "src/composables/useDataGridCellPointerHoverRouter.ts",
