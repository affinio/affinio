{
  "extends": "../../tsconfig.adapter.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@affino/overlay-host": ["../overlay-host/src/index.ts"],
      "@affino/focus-utils": ["../focus-utils/src/index.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/__tests__"
  ],
  "references": [
    { "path": "../focus-utils" },
    { "path": "../overlay-host" }
  ]
}
